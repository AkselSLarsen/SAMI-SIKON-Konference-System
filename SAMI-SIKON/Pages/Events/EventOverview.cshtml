@page
@using System.Diagnostics.Eventing.Reader
@using SAMI_SIKON.Services
@model SAMI_SIKON.Pages.Events.EventOverviewModel
@{
    ViewData["Title"] = "EventOverview";
}


<form method="post" asp-page-handler="Sort">
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            Theme
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Speaker
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Event Number
        </th>
        <th>
            Room Number
        </th>



    </tr>
    </thead>
    <tbody>
        @if (Model.SortedEvents.Count != 0)
        {
            @foreach (var item in Model.SortedEvents)
            {
                <tr>
                    <th>
                        @item.Theme
                    </th>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.Speakers
                    </td>
                    <td>
                        @item.StartTime
                    </td>
                    <td>
                        @item.StopTime
                    </td>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.RoomNr
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" asp-for="@item.Id"/>
                            <input type="submit" value="Delete" class="btn btn-danger"/>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th>
                    Theme
                </th>
                <td>
                    Name
                </td>
                <td>
                    Description
                </td>
                <td>
                    .Speakers
                </td>
                <td>
                    StartTime
                </td>
                <td>
                    StopTime
                </td>
                <td>
                    Id
                </td>
                <td>
                    RoomNr
                </td>
                <td>
                </td>
            </tr>
        }
        
</table>