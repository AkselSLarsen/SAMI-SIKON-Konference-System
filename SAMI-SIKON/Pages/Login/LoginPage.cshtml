@page
@model SAMI_SIKON.Pages.Login.LoginPageModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.UserLogin.Email" class="custom-control-label"></label>
        <input asp-for="@Model.UserLogin.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserLogin.Password" class="custom-control-label"></label>
        <input type="password" asp-for="@Model.UserLogin.Password" class="form-control" />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
</form>
@if (Model.errorMessage != "")
{
    <div class="alert alert-danger">
               @Model.errorMessage
               </div>
}