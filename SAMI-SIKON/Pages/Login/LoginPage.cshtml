@page
@model SAMI_SIKON.Pages.Login.LoginPageModel
@{
}
<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.UserEmail" class="custom-control-label"></label>
        <input asp-for="@Model.UserEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserPassword" class="custom-control-label"></label>
        <input type="password" asp-for="@Model.UserPassword" class="form-control" />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
</form>
@if (Model.ErrorMessage != "")
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}