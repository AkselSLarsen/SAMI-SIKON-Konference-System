@page
@model SAMI_SIKON.Pages.Login.UserPageModel
@{
}



<form method="post">
    <div class="form-group">
        <label asp-for="@Model.UserPassword" class="custom-control-label"></label>
        <input type="password" asp-for="@Model.UserPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewPassword1" class="custom-control-label"></label>
        <input type="password" asp-for="@Model.NewPassword1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewPassword2" class="custom-control-label"></label>
        <input type="password" asp-for="@Model.NewPassword2" class="form-control" />
    </div>
    <input type="submit" value="Update Password" class="btn btn-primary" />
</form>

@if (Model.ErrorMessage.StartsWith("Incorrect") | Model.ErrorMessage.StartsWith("New Password") | Model.ErrorMessage.StartsWith("Password not"))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
@if (Model.SuccessMessage.StartsWith("Password"))
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}